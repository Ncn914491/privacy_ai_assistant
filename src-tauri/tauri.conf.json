{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Privacy AI Assistant",
  "version": "0.1.0",
  "identifier": "com.privacy.ai.assistant",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "npm run dev:web",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Privacy AI Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["**"]
    },
    "http": {
      "scope": ["http://localhost:11434/**", "https://localhost:11434/**", "https://generativelanguage.googleapis.com/**"]
    },
    "store": {
      "default": true
    }
  }
}
